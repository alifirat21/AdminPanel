@model EntityLayer.Concrete.Category
@{
    ViewBag.Title = "UpdateCategory";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}
<br />
<h2>Kategori Güncelleme</h2>
<br />

@using (@Html.BeginForm("UpdateCategory","Category", FormMethod.Post))
{
    <div class="form-group">
        @Html.Label("Kategori İD")
        @Html.TextBoxFor(x=>x.CategoryID, new {@class ="form-control" })
        <br />
        @Html.Label("Kategori Adı")
        @Html.TextBoxFor(x=>x.CategoryName, new { @class="form-control"})
        <br />
        @Html.HiddenFor(x=>x.CategoryStatus, new { @class="form-control"})
        <br />
        <button class="btn btn-success">Güncelle</button>
    </div>
}


